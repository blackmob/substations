{
  "swagger": "2.0",
  "info": {
    "title": "Simple API",
    "description": "API for getting information about subststations in the north of England.",
    "version": "1.0"
  },
  "produces": [
    "application/json"
  ],
  "host": "localhost:3000",
  "basePath": "/api",
  "paths": {
    "/substation": {
      "get": {
        "x-swagger-router-controller": "Substations",
        "operationId": "getSubstations",
        "tags": [
          "/substations"
        ],
        "description": "Returns a list of substations with names matching location.",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "description": "The name of the substation.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful request.",
            "schema": {
              "$ref": "#/definitions/Substation"
            }
          },
          "default": {
            "description": "Invalid request.",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Substation": {
      "properties": {
        "Substation Name": {
          "type": "string"
        },
        "(kV)": {
          "type": "string"
        },
        "Load(MVA)": {
          "type": "string"
        },
        "Generation(MVA)": {
          "type": "string"
        },
        "Max(MVA)": {
          "type": "string"
        },
        "Min(MVA)": {
          "type": "string"
        },
        "Demandclassification": {
          "type": "string"
        }
      },
      "required": [
        "Substation Name",
        "(kV)",
        "Load(MVA)",
        "Generation(MVA)",
        "Max(MVA)",
        "Min(MVA)",
        "Demandclassification"
      ]
    },
    "Error": {
      "properties": {
        "message": {
          "type": "string"
        }
      },
      "required": [
        "message"
      ]
    },
    "Response": {
      "properties": {
        "Substations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Substation"
          }
        }
      },
      "required": [
        "Substations"
      ]
    }
  }
}